{
  "name": "erp-desktop",
  "version": "1.0.0",
  "description": "ERP System Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "preelectron": "npm run prisma:generate",
    "start": "npm run dev",
    "app": "electron .",
    "preapp": "npm run prisma:generate",
    "seed": "node prisma/seed.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:status": "prisma migrate status",
    "rebuild:customer-financials": "node scripts/rebuild-customer-financials.js",
    "db:legacy:customer-financial-guard": "node scripts/legacy/legacy-customer-financial-guard.js",
    "license:generate": "tsx scripts/generate-license.ts",
    "dist": "npm run build && node scripts/prepare-dist.js && electron-builder",
    "postinstall": "prisma generate"
  },
  "build": {
    "appId": "com.erp.desktop",
    "productName": "ERP System",
    "directories": {
      "output": "release-build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/.prisma/client/**/*",
      "node_modules/@prisma/**/*"
    ],
    "asarUnpack": [
      "node_modules/.prisma/client/**/*",
      "node_modules/@prisma/engines/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "prisma",
        "to": "prisma",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/.prisma",
        "to": "node_modules/.prisma",
        "filter": [
          "**/*",
          "!**/*.tmp*"
        ]
      },
      {
        "from": "node_modules/@prisma/client",
        "to": "node_modules/@prisma/client",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@fontsource/cairo": "^5.2.7",
    "@fontsource/tajawal": "^5.2.7",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@prisma/client": "^6.19.2",
    "@vitejs/plugin-react": "^5.1.2",
    "bcrypt": "^6.0.0",
    "bwip-js": "^4.8.0",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "jsbarcode": "^3.12.3",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.563.0",
    "node-machine-id": "^1.1.12",
    "prisma": "^6.19.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-window": "^1.8.10",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "vite": "^7.3.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.7.0",
    "tsx": "^4.21.0"
  }
}
